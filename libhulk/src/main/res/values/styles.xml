<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/mFFFFFF</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:theme">?attr/actionBarTheme</item>
        <item name="android:popupTheme" tools:targetApi="lollipop">
            @style/ThemeOverlay.AppCompat.Light
        </item>
        <item name="titleTextAppearance">@style/ToolbarText</item>
        <item name="android:elevation" tools:targetApi="lollipop">0dp</item>
        <item name="android:actionMenuTextColor">@color/m444444</item>
        <item name="android:textColorPrimary">@color/m444444</item>
    </style>

    <!--ToolBar 文本属性-->
    <style name="ToolbarText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/m444444</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- toolbar菜单主题 app:theme -->
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="actionMenuTextColor">@color/m444444</item>
    </style>

    <!--avloading-->
    <style name="AVLoadingIndicatorView">
        <item name="minWidth">48dip</item>
        <item name="maxWidth">48dip</item>
        <item name="minHeight">48dip</item>
        <item name="maxHeight">48dip</item>
        <item name="indicatorName">BallPulseIndicator</item>
    </style>

    <declare-styleable name="AVLoadingIndicatorView">
        <attr name="minWidth" format="dimension" />
        <attr name="maxWidth" format="dimension" />
        <attr name="minHeight" format="dimension" />
        <attr name="maxHeight" format="dimension" />
        <attr name="indicatorName" format="string" />
        <attr name="indicatorColor" format="color" />
    </declare-styleable>

</resources>